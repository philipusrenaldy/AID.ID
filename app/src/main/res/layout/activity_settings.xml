<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_1"
            app:layout_constraintBottom_toTopOf="@+id/etProfButSet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.746" />

        <Button
            android:id="@+id/etProfButSet"
            android:layout_width="289dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="User Profile"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/colorTosca"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/etTNC"
            android:layout_width="289dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Terms And Conditions"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/colorTosca"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfButSet" />

        <Button
            android:id="@+id/etabout"
            android:layout_width="289dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="About Aid.id"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/colorTosca"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTNC" />

        <Button
            android:id="@+id/etUserSupport"
            android:layout_width="289dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="User Support"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/colorTosca"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etabout" />

    </LinearLayout>
</FrameLayout>